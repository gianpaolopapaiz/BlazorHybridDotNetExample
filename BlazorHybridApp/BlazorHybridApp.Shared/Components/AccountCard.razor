@using Microsoft.AspNetCore.Components.Routing
@using BlazorHybridApp.Shared.Models

 <MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Account.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudText>@Account.Description</MudText>
        <MudText Typo="Typo.body2"></MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Transactions</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter] public FinancialAccount Account { get; set; } = default!;
}